{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",                                              
    "outDir": "build",
    "baseUrl": "./src",
    "paths" : {
      "@routes" : ["./routes/index"],
      "@schema/*" : ["./schema/*"],
    }
  },
  "include": ["src"]
}